{
  "name": "@caryyon/duro",
  "version": "0.2.2",
  "description": "HUD tech interface component library for React",
  "author": "caryyon",
  "homepage": "https://github.com/caryyon/duro#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caryyon/duro.git",
    "directory": "packages/duro-core"
  },
  "bugs": {
    "url": "https://github.com/caryyon/duro/issues"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "hud",
    "monochrome",
    "typescript"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/duro.css"
  },
  "scripts": {
    "generate-css": "pnpm exec tsx scripts/generate-css.ts",
    "build": "pnpm generate-css && tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "TIMING=1 eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@duro/tsconfig": "workspace:*",
    "@types/node": "^18.19.15",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "eslint": "^8.15.0",
    "react": "^18.1.0",
    "tsup": "^5.10.1",
    "tsx": "^3.14.0",
    "typescript": "^4.5.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "theme-ui": "^0.15.5"
  }
}
